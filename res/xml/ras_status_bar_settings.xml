<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="category_battery_options"
        android:title="@string/display_category_battery_options_title" >

    <ListPreference
	android:key="status_bar_battery_style"
	android:title="@string/status_bar_battery_style_title"
	android:dialogTitle="@string/status_bar_battery_style_title"
	android:entries="@array/status_bar_battery_style_entries"
	android:entryValues="@array/status_bar_battery_style_values" />

    <ListPreference
	android:key="status_bar_show_battery_percent"
	android:title="@string/status_bar_battery_percentage_title"
	android:dialogTitle="@string/status_bar_battery_percentage_dialog_title"
	android:entries="@array/status_bar_battery_percentage_entries"
	android:entryValues="@array/status_bar_battery_percentage_values"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_clock_options"
        android:title="@string/display_category_clock_options_title" >

    <PreferenceScreen
        android:key="clock_style_pref"
        android:fragment="com.android.settings.rastapop.StatusBarClockStyle"
        android:title="@string/status_bar_clock" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_statusbar_options"
        android:title="@string/display_category_statusbar_options_title" >

    <SwitchPreference
        android:key="status_bar_brightness_control"
        android:summary="@string/status_bar_brightness_control_summary"
        android:title="@string/status_bar_brightness_control_title"/>

    <SwitchPreference
	android:key="double_tap_sleep_gesture"
	android:title="@string/double_tap_to_sleep_title"
	android:summary="@string/double_tap_to_sleep_summary"
	android:defaultValue="true"/>

    <com.android.settings.rastapop.SystemSettingSwitchPreference
	android:defaultValue="true"
	android:key="status_bar_quick_qs_pulldown"
	android:title="@string/status_bar_quick_qs_pulldown_title"
	android:summary="@string/status_bar_quick_qs_pulldown_summary"/>
    </PreferenceCategory>
</PreferenceScreen>
