<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="category_battery_options"
        android:title="@string/display_category_batteryclock_options_title" >

    <PreferenceScreen
        android:fragment="com.android.settings.rastapop.BatterySettings"
        android:key="battery_style_pref"
        android:title="@string/status_bar_battery_title"
	android:summary="@string/status_bar_battery_summary" />
    <PreferenceScreen
        android:fragment="com.android.settings.rastapop.StatusBarClockStyle"
        android:key="clock_style_pref"
        android:title="@string/status_bar_clock"
	android:summary="@string/status_bar_clock_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_statusbar_options"
        android:title="@string/display_category_statusbar_options_title" >

    <SwitchPreference
        android:key="status_bar_brightness_control"
        android:summary="@string/status_bar_brightness_control_summary"
        android:title="@string/status_bar_brightness_control_title"/>

    <com.android.settings.rastapop.SystemSettingSwitchPreference
	android:key="double_tap_sleep_gesture"
	android:title="@string/double_tap_to_sleep_title"
	android:summary="@string/double_tap_to_sleep_summary"
	android:defaultValue="true"/>

	<SwitchPreference
	android:key="status_bar_quick_qs_pulldown"
	android:title="@string/status_bar_quick_qs_pulldown_title"
	android:summary="@string/status_bar_quick_qs_pulldown_summary"/>

     <com.android.settings.rastapop.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_category_title">

    <PreferenceScreen
        android:key="qs_order"
        android:title="@string/qs_order_title"
        android:fragment="com.android.settings.rastapop.qs.QSTiles" />

    <com.android.settings.rastapop.SecureSettingSwitchPreference
        android:key="sysui_qs_main_tiles"
        android:title="@string/qs_main_tiles_title"
        android:summaryOn="@string/qs_main_tiles_summary_on"
        android:summaryOff="@string/qs_main_tiles_summary_off"
        android:defaultValue="true" />

    <com.android.settings.rastapop.SecureSettingSwitchPreference
        android:key="qs_use_four_columns"
        android:title="@string/qs_four_columns_title"
        android:defaultValue="false" />

    <com.android.settings.rastapop.SecureSettingSwitchPreference
        android:key="qs_location_advanced"
        android:title="@string/qs_advanced_location_title"
        android:summary="@string/qs_advanced_location_summary"
        android:defaultValue="false" />

    <com.android.settings.rastapop.SecureSettingSwitchPreference
        android:key="qs_wifi_detail"
        android:title="@string/qs_wifi_detail_title"
        android:summary="@string/qs_wifi_detail_summary"
        android:defaultValue="false" />

     <com.android.settings.rastapop.SecureSettingSwitchPreference
        android:key="qs_show_brightness_slider"
        android:title="@string/qs_brightness_slider_title"
        android:summary="@string/qs_brightness_slider_summary"
        android:defaultValue="true"/>

    <Preference
        android:key="qs_advanced_options"
        android:title="@string/advpower_settings_screen_title"
        android:persistent="false"
        android:fragment="com.android.settings.rastapop.ras_status_bar_qs_advanced" />
    </PreferenceCategory>
</PreferenceScreen>
